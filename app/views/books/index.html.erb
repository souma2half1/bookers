<div>
  <div>
    <div class="m-5">
      <h2>Books</h2>
      <table class="table">
        <tr>
          <th>title</th>
          <th>body</th>
          <th></th>
        </tr>
        <tr>
          <% @books.each do |book| %>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to"show",book_path(book.id) %>/<%= link_to"edit",edit_book_path(book.id) %>/<%= link_to"destroy",book_path(book.id),method: :delete %></td>
          <% end %>
        </tr>
      </table>
      <h2>New Book</h2>
      <%= form_with model:Book.new do |f| %>
       <%= f.label :title %><br>
       <%= f.text_field :title %><br>
       <%= f.label :body %><br>
       <%= f.text_area :body %><br>
       <%= f.submit'create book' %><br>
      <% end %>
    </div>
  </div>
</div>

